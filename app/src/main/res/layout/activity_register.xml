<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horizontal_dimens"
        android:layout_marginTop="@dimen/vertical_dimens"
        android:layout_marginRight="@dimen/horizontal_dimens"
        android:layout_marginBottom="@dimen/vertical_dimens"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/myimg"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:background="@drawable/cyc_logo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Username"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Phone number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Cruch"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Province Cruch"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="City Cruch"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:background="@drawable/rect_greyoutline"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dimens"
                android:layout_marginRight="@dimen/horizontal_dimens"
                android:background="#00000000"
                android:hint="Personal / Gclub"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"
            android:layout_marginTop="@dimen/vertical_dimens"
            android:layout_marginRight="@dimen/horizontal_dimens"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:buttonTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy policy"
                    android:textAlignment="center"
                    android:textColor="#4a4a4a"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_dimens"

            android:layout_marginRight="@dimen/horizontal_dimens"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:buttonTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and condition"
                    android:textAlignment="center"
                    android:textColor="#4a4a4a"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="@dimen/vertical_dimens"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_button"
                android:text="Register"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account "
                android:textAlignment="center"
                android:textColor="#4a4a4a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>