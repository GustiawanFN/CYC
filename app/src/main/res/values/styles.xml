<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:textColor">#151515</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="windowActionBar">true</item>

        <item name="windowNoTitle">false</item>
    </style>



    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/background_search_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Mine">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tabCustomStyle" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">#FFFEEFC4</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/blue</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <!--        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>-->
        <!-- Set title color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.roboto_medium</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.roboto_medium" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
